{{define "HtmlHead"}}
<head>
	<meta charset="utf-8">
	<link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">
	<title>Plattentests.de 💿 - Highlights of the week</title>
</head>
{{end}}

{{define "Navigation"}}
	<header>
		<nav>
			<a href="/">📃 List records of the week  </a>
			<a href="/createPlaylist">🔈 Create TEST Spotify playlist </a>
			<a href="/createPlaylist?playlist=prod">🔊 Create LIVE Spotify playlist</a>
		</nav>
	</header>
{{end}}

{{define "RecordHeader"}}
			<tr>
        <th>Image</th>
				<th>Band & Record</th>
				<th>Score</th>
				<th>Tracks</th>
			</tr>
{{end}}

{{define "Record"}}
			<tr>
        <td><a href="{{.Link}}"><img src="{{.Image}}" alt="{{.Band}}"></a></td>
				<td>{{.Band}}<br>
					<strong>{{.Recordname}}</strong>
				</td>
				<td><strong>{{.Score}}</strong></td>
				<td>
				{{range .Tracks}}
					{{ if .Tracklink }}
					✅ <a href="{{ .Tracklink}}">{{.Trackname}}</a> 
					{{ else }}
					❌ {{.Trackname}} 
					{{end}}
					<br>
				{{end}}
				</td>
			</tr>
{{end}}

{{define "Footer"}}
	<footer>
		<p>Created with ❤️ by <a href="https://github.com/jetzlstorfer">jetzlstorfer</a><br>Source on <a href="https://github.com/jetzlstorfer/plattentests-go">GitHub</a>. Content crawled from <a href="https://plattentests.de">Plattentests.de</a>.</p>
	</footer>
{{end}}