package main

import (
	"net/http"
	"os"

	"github.com/gin-gonic/gin"
)

func health(c *gin.Context) {
	c.IndentedJSON(http.StatusOK, "ok")
}

func get_port() string {
	port := ":8080"
	if val, ok := os.LookupEnv("FUNCTIONS_CUSTOMHANDLER_PORT"); ok {
		port = ":" + val
	}
	return port
}

func main() {
	r := gin.Default()
	r.GET("/api/health/", health)
	r.Run(get_port())
}
